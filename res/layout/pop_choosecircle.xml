<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="choose circle(minutes)" />

    <EditText
        android:id="@+id/et_circle"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:numeric="integer" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ps: cleanend time will adjust to next day if it's earlier than cleanstart" />

    <TextView
        android:id="@+id/tv_cleanstart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="clean start:" />

    <TextView
        android:id="@+id/tv_cleanend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="clean end:" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:orientation="horizontal">

        <TimePicker
            android:id="@+id/tp_cleanstart"
            android:layout_width="match_parent"
            android:layout_height="100dp" 
            android:layout_weight="1"/>

        <TimePicker
            android:id="@+id/tp_cleanend"
            android:layout_width="match_parent"
            android:layout_height="100dp" 
            android:layout_weight="1"/>
        
    </LinearLayout>
    
    

    <Button
        android:id="@+id/btn_circleconfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ok" />

</LinearLayout>